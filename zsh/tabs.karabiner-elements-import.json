{
    "description": "Swap \"command + tab\" with \"control + tab\" for easier use inside applications. For example: switching between tabs in your browser, which now matches the other tab related shortcuts.",
    "manipulators": [
        {
            "from": {
                "key_code": "tab",
                "modifiers": { "mandatory": ["left_command"] }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_control"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "tab",
                "modifiers": { "mandatory": ["left_control"] }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_command"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "tab",
                "modifiers": { "mandatory": ["left_command", "left_shift"] }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_control", "left_shift"]
                }
            ],
            "type": "basic"
        },
        {
            "from": {
                "key_code": "tab",
                "modifiers": { "mandatory": ["left_control", "left_shift"] }
            },
            "to": [
                {
                    "key_code": "tab",
                    "modifiers": ["left_command", "left_shift"]
                }
            ],
            "type": "basic"
        }
    ]
}